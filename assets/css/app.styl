@import 'variables'

body, html
  margin 0
  padding 0
  font-family $fontFamily
  font-weight 400
  font-size 24px
  line-height 30px
  letter-spacing -0.3px

svg, img
  max-width 100%
  display block
  max-height 95vh
  height auto

  @media (max-width $bp-sm)
    max-height none

a
  text-decoration none
  color $black

p
  min-height 16px

  @media (max-width $bp-xs)
    font-size 22px
    line-height 28px

b, strong
  font-weight normal
  font-family $fontFamilyBold

h1
  font-weight normal
  font-size 140px
  line-height 140px
  max-width 1000px

  @media (max-width $bp-sm)
    font-size 76px
    line-height 82px

  &.h1-small
    font-size 72px
    line-height 76px
    margin 0

    @media (max-width $bp-sm)
      font-size 56px
      line-height 64px

    @media (max-width $bp-xs)
      font-size 48px
      line-height 54px
      margin 1em 0

h2
  font-weight normal
  font-family $fontFamilyBold
  font-size 40px
  line-height 46px

  @media (max-width $bp-xs)
    font-size 32px
    line-height 40px

.large
  font-size 48px
  line-height 54px
  max-width 930px
  margin 18px 0

  a
    font-family $fontFamilyBold
    position relative
    color inherit

    &:after
      content ''
      width 100%
      position absolute
      bottom 14px
      left 0

  p
    margin 0

  @media (max-width $bp-sm)
    font-size 40px
    line-height 46px

  @media (max-width $bp-xs)
    font-size 32px
    line-height 38px

h3
  font-weight normal
  font-family $fontFamilyBold
  font-size 32px
  line-height 36px

  @media (max-width $bp-xs)
    font-size 28px
    margin-bottom 0

.nomargin
  white-space pre-line
  margin 1em 0

  p
    margin 0

  br
    margin 1em 0

.click
  cursor pointer

.center
  margin-left auto
  margin-right auto

.hidden
  display none

.page
  padding-top 10vh
  background #EEEDE9

.window
  padding-bottom 100vh

  &--front
    z-index 1
    position relative
    background $white

.heading
  display flex
  align-items baseline

  @media (max-width $bp-sm)
    display block

.clickable
  cursor pointer

input,
button
  display block
  margin 1em 0
  background none
  border 0
  position relative
  padding 0
  outline none
  border-radius 0

input,
input:-webkit-autofill::first-line,
input:-webkit-autofill,
input:-webkit-autofill:hover, 
input:-webkit-autofill:focus, 
input:-webkit-autofill:active
  font-family $fontFamily
  border-bottom 1px solid $black
  -webkit-appearance none
  margin-top 1em
  padding 0.45em 0
  font-size 24px !important
  line-height 32px
  width 100%
  outline none
  // -webkit-text-fill-color $white
  -webkit-box-shadow 0 0 0px 1000px transparent inset
  transition background-color 5000s ease-in-out 0s

.form--alt input
  border-color $white

button
  font-family $fontFamilySemiBold
  font-size 40px
  line-height 48px
  margin-left auto
  cursor pointer
  letter-spacing -0.9px

.form--alt input,
.form--alt button
  color $white

.form--alt input::-webkit-input-placeholder {
  color $white
}

.green, .green a
  color $green

.orange, .orange a
  color $orange

.blue, .blue a
  color $blue

.arrowLink
  position relative
  display flex
  align-items center
  justify-content center

  &:after
    content ''
    width 62px
    height 48px
    background url(/images/arrow.svg) no-repeat
    background-size 100%
    background-position 50%
    flex-shrink 0
    margin-left 20px
    transition 0.4s transform $ease
    position relative
    top 2px

  &:hover:after
    transform translateX(20px)

  &--small:after
    width 36px
    height 28px

  &--hover
    justify-content left

    &:after
      opacity 0
      background url(/images/arrow-diagonal.svg) no-repeat 50%
      margin-left 10px
      width 20px
      height 20px
      transform none

  &--hover:hover:after
    opacity 1
    transform none

.fade
  opacity 1
  transform translateY(0)
  transition 0.6s opacity $ease, 0.6s transform $ease

.fadeIn
  opacity 0 !important
  transform translateY(100px) !important

video::-webkit-media-controls-panel
  display none!important
  -webkit-appearance none

video::-webkit-media-controls-play-button
  display none!important
  -webkit-appearance none

video::-webkit-media-controls-start-playback-button
  display none!important
  -webkit-appearance none

